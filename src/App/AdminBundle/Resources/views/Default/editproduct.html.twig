{% extends"::admin.html.twig" %}
{% block body %}
    <section class="content-header">
        <h1>
            Dashboard
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Inventory</li>
            <li class="active">Edit</li>
        </ol>
    </section>

    <section class="content">
        <!-- /.row -->

        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <div class="col-md-offset-2 col-md-8">
                <!-- /.row -->

                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">Edit Product</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                    </div>
                    <div class="box-body">
                        <form action="" method="post" enctype="multipart/form-data">
                            <div class="col-md-12" style="margin-bottom: 15px">
                                <label for="">Name</label>
                                <input required type="text" value="{{ pro.name }}" class="form-control" placeholder="Name" name="name">
                                <label for="">Image</label>
                                <input type="file" class="form-control" name="image">
                                <label for="">Select Category</label>
                                <select required name="sub" class="form-control">
                                    <option value="">-- Select Category --</option>
                                    {% for item in sub %}
                                        <option {% if pro.sub.id == item.id %}selected=""{% endif %} value="{{ item.id }}">{{ item.main.name }} > {{ item.name }}</option>
                                    {% endfor %}
                                </select>
                                <label for="">Price</label>
                                <input required type="text" class="form-control" value="{{ pro.price }}" placeholder="Price" name="price">
                                <label for="">Quantity</label>
                                <input required type="text" value="{{ pro.quantity }}" class="form-control" placeholder="Quantity" name="quantity">
                            </div>
                            <div class="col-md-4">
                                <input {% if pro.bs == 1 %}checked{% endif %} type="checkbox" name="bs"> Best Seller
                            </div>
                            <div class="col-md-4">
                                <input {% if pro.ws == 1 %}checked{% endif %} type="checkbox" name="ws"> Whole Sale
                            </div>
                            <div class="col-md-4">
                                <input {% if pro.kartom == 1 %}checked{% endif %} type="checkbox" name="kr"> Kartom
                            </div>
                            <div class="col-md-12">
                                <label for="">Details</label>
                                <textarea required name="details" rows="10" class="form-control">{{ pro.details }}</textarea>
                                <input type="submit" class="btn btn-info pull-right" style="margin-top: 10px">
                            </div>



                        </form>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.row -->
    </section>
{% endblock %}